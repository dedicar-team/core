{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "plugins": [{ "name": "next" }],
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*",
      ],
    },
    "target": "es2020"
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
